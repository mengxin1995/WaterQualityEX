<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>  <!-- 设置无标题 -->
        <item name="android:windowFullscreen">?android:windowNoTitle</item> <!-- 是否填充慢屏幕，引用android:windowNoTitle 的值 ?android:windowNoTitle，取决于android:windowNoTitle的值-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="item_one_level_word">
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">30</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_select</item>
    </style>

    <style name="item_one_level_select">
        <item name="android:background">@color/fragment_left_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="data_item_next">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="shuzhi">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="shujubiaoti">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
